.events
    .events__wrapper
        .events__schedule
            h3.events__title Event Schedule 
            .events__days
                +event('Day 01', '16 August')
                +event('Day 02', '17 August')
                +event('Day 03', '18 August')
        .events-table
            .events-table__wrapper 
                .events-table__header
                    p.events-table__title-time= 'Time'
                    p.events-table__title-content= 'Content'
                    p.events-table__title-speakers= 'Speakers'
                    p.events-table__title-network
                .events-table__list
                    .events-table__timing
                        +basic('11:00 AM to 12:00 PM', 'Vestibulum vel eros vel metus lacinia feugiat a nec metus.')
                        +speakers('person1', 'Yui Ronald', 'Booth: 2F12')
                        +network('prev', 'Preview')
    +confetti('tria2', 'events_triangle')
    +confetti('zigred', 'events_zigred')
    +confetti('zigblue', 'events_zigblue')
    +confetti('balls', 'events_balls')
