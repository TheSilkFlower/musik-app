mixin button(theme, value, src)
    button(class='button_' + theme)= value 
        if (src)
            img(src=`../assets/images/${src}.png`)

mixin logotype  
    a(href="#")
      img(src="../assets/images/logo.svg", alt="Logo")

mixin infoblock(className, name, value)
    h2(class=className + '__caption')= name
    p(class=className + '__item')= value

mixin link(el, i)
    li 
        if (i)
            a(href="#")= el 
            img(src="../assets/images/arrow-down.png", class="arrow-down") 
        else 
            a(href="#")= el

mixin melody(color, src, name, textColor)

    .genres-elements__melody(style=`background: rgba${color};`)
        .genres-elements__wrapper
            if (textColor)
                img.genres-elements__img(src=`../assets/images/${src}.png`, alt="Melody")
                p.genres-elements__name.genres-elements__name-color= name
                p.genres-elements__view.genres-elements__view-color Duis aute irure dolor in reprehenderit in voluptate velit esse
            else
                img.genres-elements__img(src=`../assets/images/${src}.png`, alt="Melody")
                p.genres-elements__name= name
                p.genres-elements__view Duis aute irure dolor in reprehenderit in voluptate velit esse

mixin confetti(src, cl)
    img(src=`../assets/images/${src}.png`, alt="Confetti", class=cl)

mixin tariff(rate, cost, seat, colorType)
    h3.price-card__caption(class=`price-card__caption-${colorType}`)= rate  
    p.price-card__cost(class=`price-card__cost-${colorType}`)= '$' + cost 
    p(class=`price-card__seat-${colorType}`)= seat + ' Available' 
    p(class=`price-card__access-${colorType}`)= 'Access to Wi-Fi Router' 
    p.price-card__eats(class=`price-card__eats-${colorType}`)= 'Free Food & Coffee'

mixin brand(sponsorName)
    img.sponsors-brands__logo(src=`../assets/images/${sponsorName}.png`, alt="Sponsor")

mixin media(src)
    a(href="#")
      img.footer-info__socials-media(src=`../assets/images/${src}.svg`, alt="Media")

mixin instashot(src)
    .gallery-cards__block
        img.gallery-cards__card(src=`../assets/images/${src}.png`, alt="Card")
        .gallery-cards__info   
            .gallery-cards__mark
                .gallery-cards__likes 
                    img.gallery-cards__likes-i1(src="../assets/images/heart.svg", alt="Like")
                    h5.gallery-cards__num #[b 140]
                .gallery-cards__comments
                    img.gallery-cards__likes-i2(src="../assets/images/chat.svg", alt="Chat")
                    h5.gallery-cards__num #[b 412]
        span.gallery-cards__part Lorem Ipsum Amet
        span.gallery-cards__hash #music #concert #conference #london #event #artist #dj #soundtrack #dance

mixin sign(src, text)
    .contacts-signs
        img.contacts-signs__img(src=`../assets/images/${src}.png`, alt="Logo")
        p.contacts-signs__text= text

mixin data(title, text, src, type)
    .contacts-about
        if (type)
            h4.contacts-about__title= title
            textarea.contacts-about__text(value=`${text}`, name="area", cols="30", rows="4", wrap="soft")
            img.contacts-about__img(src=`../assets/images/${src}.png`, alt="Line")
        else 
            h4.contacts-about__title= title
            input.contacts-about__text(value=`${text}`)
            img.contacts-about__img(src=`../assets/images/${src}.png`, alt="Line")

mixin mention(src, name, site)
    .wrapper
        .mentions__content 
            .mentions__info 
                .mentions__comment
                    .mentions__quote
                        img(src="../assets/images/uot.png", alt="Quotes")
                    p.mentions__view Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
                    .mentions__quote2
                        img(src="../assets/images/uot2.png", alt="Quotes")
                .mentions__person
                    img.mentions__user(src=`../assets/images/${src}.png`, alt="User")
                    .mentions__id
                        h4.mentions__name= name
                        p.mentions__site= site

mixin event(num, day)
    .events__date
        .events__numeration= num
        .events__num-of-month= day 
        .events__line

mixin speaker(src, name, value)
    .events-table__speaker
        img.events-table__person-img(src=`../assets/images/${src}.png`, alt="Speaker")
        .events-table__person
            .events-table__person-name= name 
            .events-table__person-value= value  


mixin network(src, network)
    .events-table__network
        p.events-table__network-status(class=`events-table__network-status-${src}`)= network
        img.events-table__network-img(src=`../assets/images/${src}.png`, alt="Network")

mixin basic(time, content)
    p.events-table__time= time 
    p.events-table__content= content 

    
